<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<beans
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.springframework.org/schema/beans">

	<bean id="phoneGapService" class="com.wavemaker.studio.phonegap.PhoneGapService"
		scope="singleton" lazy-init="true">
		<property name="projectManager">
			<ref bean="projectManager" />
		</property>
		<property name="fileSystem">
			<ref bean="fileSystem" />
		</property>
		<property name="studioService">
			<ref bean="studioService" />
		</property>
	</bean>

	<bean lazy-init="false" scope="singleton"
		class="com.wavemaker.runtime.service.reflect.ReflectServiceWire">
		<property name="serviceId" value="phoneGapService" />
		<property name="serviceType" ref="JavaService" />
	</bean>
</beans>
