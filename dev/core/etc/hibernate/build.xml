				${spring01.name} ${spring02.name} ${spring03.name} ${spring04.name} ${spring05.name} ${spring06.name} ${spring07.name} ${spring08.name} ${spring09.name} ${spring10.name} ${spring11.name} ${spring12.name} ${spring13.name} ${spring14.name} ${spring15.name} ${spring16.name} ${spring17.name} ${spring18.name} ${spring19.name} ${spring20.name} ${aopalliance.jar} ${hibernate.jar.name} ${hibernate-ext.jar.name} ${jtidy.jar.name} ${apache-logging.jar.name} ${apache-lang.jar.name} ${apache-io.jar.name} ${dom4j.jar.name} ${cglib.jar.name} ${asm.jar.name} ${apache-collections.jar.name} ${antlr.jar.name} ${jaxb-xjc.jar.name} ${jaxb-api.jar.name} ${jaxb-impl.jar.name} ${activation.jar.name} ${mysql-connector.jar.name} ${postgresql.jar.name} ${db2.jar.name} ${jtds.jar.name} ${hsql.jar.name} ${log4j.jar.name} ${ant.jar.name} ${ant-nodeps.jar.name} ${freemaker.jar.name} ${jta.jar.name} ${jsr173_api.jar.name} ${stax.jar.name} ${apache-fileupload.jar.name}"/>
            </manifest>
            <include name="log4j.properties"/>
        </jar>
    </target>

</project>
