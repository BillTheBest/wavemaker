<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<service xmlns="http://www.activegrid.com/namespaces/ServiceDefinitions/1.0"
        type="JavaService"
        class="com.wavemaker.runtime.service.RuntimeService"
        id="runtimeService"
        springFile="com/wavemaker/runtime/service/runtimeServiceBean.xml">
        
    <operation name="getProperty">
        <parameter isList="false"
            typeRef="java.lang.Object"
            name="instance"/>
        <parameter isList="false"
            typeRef="java.lang.String"
            name="type"/>
        <parameter isList="false"
            typeRef="java.lang.String"
            name="propertyName"/>
        <return isList="false" typeRef="java.lang.Object" />
    </operation>

    <operation name="getLocalHostIP">
        <return isList="false" typeRef="java.lang.String"/>
    </operation>
    
    <operation name="read">
        <parameter isList="false" typeRef="java.lang.String" name="serviceName" />
        <parameter isList="false" typeRef="java.lang.String" name="typeName" />
        <parameter isList="false" typeRef="java.lang.Object" name="instance"/>
        <parameter isList="false" typeRef="com.wavemaker.runtime.service.PropertyOptions" name="propertyOptions" />
        <parameter isList="false" typeRef="com.wavemaker.runtime.service.PagingOptions" name="pagingOptions" />
    </operation>
    
    <operation name="update">
        <parameter isList="false" typeRef="java.lang.String" name="serviceName" />
        <parameter isList="false" typeRef="java.lang.String" name="typeName" />
        <parameter isList="false" typeRef="java.lang.Object" name="objectToUpdate"/>
    </operation>
    
    <operation name="insert">
        <parameter isList="false" typeRef="java.lang.String" name="serviceName" />
        <parameter isList="false" typeRef="java.lang.String" name="typeName" />
        <parameter isList="false" typeRef="java.lang.Object" name="objectToInsert"/>
    </operation>
    
    <operation name="delete">
        <parameter isList="false" typeRef="java.lang.String" name="serviceName" />
        <parameter isList="false" typeRef="java.lang.String" name="typeName" />
        <parameter isList="false" typeRef="java.lang.Object" name="objectToDelete"/>
    </operation>

    <dataobjects>
        <dataobject name="PagingOptions"
                javaType="com.wavemaker.runtime.service.PagingOptions"
                internal="true">
            <element isList="false" typeRef="java.lang.Long" name="firstResult"/>
            <element isList="false" typeRef="java.lang.Long" name="maxResults"/>
            <element isList="true" typeRef="java.lang.String" name="orderBy"/>
        </dataobject>
        
        <dataobject name="PropertyOptions"
                javaType="com.wavemaker.runtime.service.PropertyOptions"
                internal="true">
            <element isList="true" typeRef="java.lang.String" name="properties"/>
            <element isList="true" typeRef="com.wavemaker.runtime.service.Filter" name="filters"/>
        </dataobject>     
    </dataobjects>
</service>
