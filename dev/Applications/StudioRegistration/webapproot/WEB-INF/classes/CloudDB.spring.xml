<?xml version="1.0"?>

<!-- Generated 02/01/2011 11:28:28

Configuration for 'CloudDB' database service

-->

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd">


    <bean 
        id="CloudDB"
        class="com.wavemaker.studio.clouddb.CloudDB"
        scope="singleton"
        lazy-init="true">
        <property name="dataServiceManager">
            <ref bean="CloudDBDataService"/>
        </property>
        <property name="taskManager">
            <ref bean="CloudDBTaskMgr"/>
        </property>
    </bean>


    <bean 
        class="com.wavemaker.runtime.data.spring.WMPropertyPlaceholderConfigurer">
        <property name="ignoreUnresolvablePlaceholders" value="true"/>
        <property name="locations">
            <list>
                <value>classpath:CloudDB.properties</value>
            </list>
        </property>
    </bean>


    <bean 
        id="CloudDBDataSource" 
        class="org.springframework.jdbc.datasource.DriverManagerDataSource" 
        lazy-init="true">
        <property name="driverClassName" value="${CloudDB.driverClassName}"/>
        <property name="url" value="${CloudDB.connectionUrl}"/>
        <property name="username" value="${CloudDB.username}"/>
        <property name="password" value="${CloudDB.password}"/>
    </bean>


    <bean 
        id="CloudDBTxMgr" 
        class="org.springframework.orm.hibernate3.HibernateTransactionManager"
        lazy-init="true">
        <property name="sessionFactory">
            <ref bean="CloudDBSessionFactory"/>
        </property>
    </bean>


    <bean 
        id="CloudDBHibernateTemplate"
        class="org.springframework.orm.hibernate3.HibernateTemplate"
        lazy-init="true">
        <property name="sessionFactory"> 
            <ref bean="CloudDBSessionFactory"/>
        </property>
    </bean>  


    <bean 
        id="CloudDBSessionFactory" 
        class="com.wavemaker.runtime.data.spring.ConfigurationAndSessionFactoryBean"
        lazy-init="true">

        <!-- A unique name for this SessionFactory's configuration -->
        <property name="name" value="CloudDB"/>
        <property name="dataSource" ref="CloudDBDataSource"/>

        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">${CloudDB.dialect}</prop>
                <prop key="hibernate.transaction.factory_class">
                    org.hibernate.transaction.JDBCTransactionFactory
                </prop>
                <prop key="hibernate.current_session_context_class">thread</prop>
            </props> 
        </property>

        <property name="mappingResources">
            <list>

<value>com/wavemaker/studio/clouddb/data/User.hbm.xml</value>

<value>com/wavemaker/studio/clouddb/data/User.ql.xml</value>
<value>com/wavemaker/studio/clouddb/data/app-queries.ql.xml</value>

            </list>
        </property>

    </bean>


    <!-- the data service bean instance is injected into the service bean -->
    <bean 
        id="CloudDBDataService" 
        class="com.wavemaker.runtime.data.spring.SpringDataServiceManager"
        lazy-init="true">
        <constructor-arg>
            <!-- the value of the "name" property of the SessionFactory -->
            <value>CloudDB</value>
        </constructor-arg>
        <constructor-arg>
            <ref bean="CloudDBHibernateTemplate"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="CloudDBTxMgr"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="CloudDBTaskMgr"/>
        </constructor-arg>
        <constructor-arg>
            <map>
                <entry key="useIndividualCRUDOperations" value="false"/>
                <entry key="refreshEntities" value=""/> 
            </map>
        </constructor-arg>
    </bean>


    <bean 
        id="CloudDBTaskMgr"
        class="com.wavemaker.runtime.data.DefaultTaskManager"
        lazy-init="true"/>

    <bean class="com.wavemaker.runtime.service.events.EventWire"
        lazy-init="false">
        <property name="serviceWire" ref="CloudDBServiceWire"/>
        <property name="eventListener">
            <bean class="com.wavemaker.runtime.data.DataServiceEventListener"/>
        </property>
    </bean>

    <bean id="CloudDBServiceWire"
        class="com.wavemaker.runtime.service.reflect.ReflectServiceWire"
        lazy-init="false" scope="singleton">
        <property name="serviceId" value="CloudDB"/>
        <property name="serviceType" ref="DataService"/>
    </bean>

</beans>
