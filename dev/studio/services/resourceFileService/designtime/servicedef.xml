<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<service xmlns="http://www.activegrid.com/namespaces/ServiceDefinitions/1.0" id="resourceFileService" class="com.wavemaker.studio.ResourceFileService" CRUDService="false" type="JavaService" springFile="resourceManager.spring.xml">
    <operation name="uploadFile">
        <parameter name="file" typeRef="org.springframework.web.multipart.MultipartFile" isList="false"/>
        <parameter name="path" typeRef="java.lang.String" isList="false"/>
        <return typeRef="com.wavemaker.runtime.server.FileUploadResponse" isList="false"/>
    </operation>
    <operation name="renameFile">
        <parameter name="from" typeRef="java.lang.String" isList="false"/>
        <parameter name="to" typeRef="java.lang.String" isList="false"/>
        <parameter name="overwrite" typeRef="boolean" isList="false"/>
        <return typeRef="java.lang.String" isList="false"/>
    </operation>
    <operation name="unzipAndMoveNewFile">
        <parameter name="file" typeRef="java.lang.String" isList="false"/>
        <return typeRef="boolean" isList="false"/>
    </operation>
    <operation name="writeFile">
        <parameter name="filePath" typeRef="java.lang.String" isList="false"/>
        <parameter name="filetext" typeRef="java.lang.String" isList="false"/>
    </operation>
    <operation name="getFolder">
        <parameter name="folderName" typeRef="java.lang.String" isList="false"/>
        <return isList="false"/>
    </operation>
    <operation name="getResourceFolder">
        <return isList="false"/>
    </operation>
    <operation name="createFolder">
        <parameter name="name" typeRef="java.lang.String" isList="false"/>
        <return typeRef="boolean" isList="false"/>
    </operation>
    <operation name="readFile">
        <parameter name="filePath" typeRef="java.lang.String" isList="false"/>
        <return typeRef="java.lang.String" isList="false"/>
    </operation>
    <operation name="downloadFile">
        <parameter name="folder" typeRef="java.lang.String" isList="false"/>
        <parameter name="filename" typeRef="java.lang.String" isList="false"/>
        <return typeRef="com.wavemaker.runtime.server.DownloadResponse" isList="false"/>
    </operation>
    <operation name="deleteFile">
        <parameter name="name" typeRef="java.lang.String" isList="false"/>
        <return typeRef="boolean" isList="false"/>
    </operation>
    <dataobjects>
        <dataobject javaType="com.wavemaker.runtime.server.FileUploadResponse" name="FileUploadResponse" supportsQuickData="false">
            <element name="error" typeRef="java.lang.String" isList="false" allowNull="false"/>
            <element name="height" typeRef="java.lang.String" isList="false" allowNull="false"/>
            <element name="path" typeRef="java.lang.String" isList="false" allowNull="false"/>
            <element name="width" typeRef="java.lang.String" isList="false" allowNull="false"/>
        </dataobject>
    </dataobjects>
</service>
