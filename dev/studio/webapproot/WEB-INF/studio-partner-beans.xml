<?xml version="1.0" encoding="UTF-8"?>

<!--
	Include any partner specific beans
-->
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:aop="http://www.springframework.org/schema/aop"
		xsi:schemaLocation="http://www.springframework.org/schema/beans
			http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
			http://www.springframework.org/schema/aop
			http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">

	<bean id="asteriaLoginManager"
            class="com.asteria.runtime.flow.AsteriaLoginManager"
            scope="singleton"
            lazy-init="true"/>

	<bean id="pwsLoginManagerBeanFactory"
		class="com.wavemaker.runtime.pws.PwsLoginManagerBeanFactory"
		scope="singleton"
		lazy-init="true">
		<property name="pwsLoginManagers">
			<map>
				<entry key="asteria" value-ref="asteriaLoginManager"/>
				<!--entry key="xxxxx" value-ref="xxxxxLoginManager"/-->
			</map>
		</property>
	</bean>

	<bean id="asteriaRestImporter"
            class="com.asteria.tools.flow.AsteriaRestImporter"
            scope="singleton"
            lazy-init="true">
		<property name="projectManager">
			<ref bean="projectManager"/>
        </property>
        <property name="designServiceManager">
            <ref bean="designServiceManager"/>
        </property>
	</bean>

	<bean id="pwsRestImporterBeanFactory"
		class="com.wavemaker.tools.pws.PwsRestImporterBeanFactory"
		scope="singleton"
		lazy-init="true">
		<property name="pwsRestImporters">
			<map>
				<entry key="asteria" value-ref="asteriaRestImporter"/>
				<!--entry key="xxxxx" value-ref="xxxxxRestImporter"/-->
			</map>
		</property>
	</bean>

	<bean id="asteriaRestWsdlGenerator"
            class="com.asteria.tools.flow.AsteriaRestWsdlGenerator"
            scope="singleton"
            lazy-init="true"/>

	<bean id="pwsRestWsdlGeneratorBeanFactory"
		class="com.wavemaker.tools.pws.PwsRestWsdlGeneratorBeanFactory"
		scope="singleton"
		lazy-init="true">
		<property name="pwsRestWsdlGenerators">
			<map>
				<entry key="asteria" value-ref="asteriaRestWsdlGenerator"/>
				<!--entry key="xxxxx" value-ref="xxxxxRestWsdlGenerator"/-->
			</map>
		</property>
	</bean>

	<bean id="asteriaRestServiceGenerator"
            class="com.asteria.tools.flow.AsteriaRestServiceGenerator"
            scope="singleton"
            lazy-init="true"/>

	<bean id="pwsRestServiceGeneratorBeanFactory"
		class="com.wavemaker.tools.pws.PwsRestServiceGeneratorBeanFactory"
		scope="singleton"
		lazy-init="true">
		<property name="pwsRestServiceGenerators">
			<map>
				<entry key="asteria" value-ref="asteriaRestServiceGenerator"/>
				<!--entry key="xxxxx" value-ref="xxxxxRestServiceGenerator"/-->
			</map>
		</property>
	</bean>
</beans>
