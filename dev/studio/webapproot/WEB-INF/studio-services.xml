<?xml version="1.0" encoding="UTF-8"?>

<!--
Server definition of all services; 
-->

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd">

    <!-- import runtimeService; eventually, this will be done automatically
            when this file is generated -->
    <import resource="classpath:com/wavemaker/runtime/service/runtimeServiceBean.xml" />
    
    <bean id="fileSerializerFactory"
        class="com.wavemaker.tools.serializer.FileSerializerFactory"
        scope="singleton">
        <property name="serializerMap">
            <map merge="true">
                <entry key="xml">
                    <list>
                        <ref bean="springBeansSerializer" />
                    </list>
                </entry>
            </map>
        </property>
    </bean>
    <bean id="springBeansSerializer"
        class="com.wavemaker.tools.serializer.SpringBeansSerializer"
        scope="singleton"
        lazy-init="true">
    </bean>

    <import resource="classpath:studioService.spring.xml"/>
    <import resource="classpath:dataService.spring.xml"/>
    <import resource="classpath:javaService.spring.xml"/>
    <import resource="classpath:pagesService.spring.xml"/>
    <import resource="classpath:deploymentService.spring.xml"/>
    <import resource="classpath:cloudFoundryService.spring.xml"/>
    <import resource="classpath:cloudServerService.spring.xml"/>
    <import resource="classpath:cloudStorageService.spring.xml"/>
    <import resource="classpath:resourceFileService.spring.xml"/>
    <import resource="classpath:UserService.spring.xml"/>
    <import resource="classpath:webService.spring.xml"/>
    <import resource="classpath:registrationService.spring.xml"/>
    <import resource="classpath:securityConfigService.spring.xml"/>
    <import resource="classpath:servicesService.spring.xml"/>
    <import resource="classpath:securityService.spring.xml"/>
    <import resource="classpath:CloudDB.spring.xml"/>
	<import resource="classpath:warpFlowService.spring.xml"/>
	<import resource="classpath:warpLoginService.spring.xml"/>
 	<import resource="classpath:waveMakerService.spring.xml"/>
	<import resource="classpath:pwsImportService.spring.xml"/>
</beans>
